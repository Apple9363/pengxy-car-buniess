    <view class="selected">
        <view class="select-title">汽车服务-车源/金融/车务</view>
        <view class="select-bottom">
            <view bindtap="tabDetail" data-postad="{{mainCar}}">
                <image src="{{mainCar.imgSrc}}"></image>
            </view>
        </view>
        <view class="select-top">
            <view wx:for="{{newCarList}}" wx:key="{{item.id}}" class="select-top-small">
                <view bindtap="tabDetail" data-postad="{{item}}">
                    <image src="{{item.imgSrc}}"></image>
                </view>
            </view>
        </view>
        
    </view>
    <view class="newest">
        <view class="newest-title"><text>热销爆款！智能新能源汽车</text></view>
        <view class="goods-box">
            <view class="goods-list" wx:for="{{carList}}" wx:key="{{item.id}}">                       
                <view bindtap="tabDetail" data-postad="{{item}}">
                    <image src="{{item.imgSrc}}"></image>
                    <view class="goods-text"><text>{{item.carName}}</text></view>
                    <view class="goods-price"><text><text class="product-price">￥</text>{{item.price}}</text></view>
                </view>
            </view>
        </view>
    </view>
</view>