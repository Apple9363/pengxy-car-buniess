@import '../../../common/common.wxss';

page,.main{
    height: 100%;
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #eee;
    box-sizing: border-box;
    background: #eeeeee;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 2px solid #fff;
}
.categroy-left .cate-list.on{
    color: #ef8762;
    border-color: #ef8762;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
    
}
.cate-box{
    height: 100%;
    padding:30rpx 20rpx;
    box-sizing: border-box;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 300rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #ed7b35;
    font-size: 32rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #ed7b35;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #ed7b35;
}
.product {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.product-list{
    display: inline-block;
    width: 270rpx;
    height: 200rpx;
    text-align: center;
    margin-bottom:20rpx;
    font-size: 24rpx;
}
.product-list image{
    width: 100%;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.classname {
  font-size: 32rpx;
}
