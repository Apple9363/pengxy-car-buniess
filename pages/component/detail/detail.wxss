/* pages/component/detail/detail.js.wxss */
@import '../../../common/common.wxss';
.main-container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}
.goods-box{
    position: relative;
    padding: 0rpx;
    color: #454552;
    margin-bottom: 30rpx;
}
.goods-box .goods-thumb{
    width: 100%;
    height: 550rpx;
    /* margin: 0rpx 0 25rpx; */
}
.goods-tab-box {
  min-height: 625rpx;
}
.goods-tab-box,
.goods-box {
  background-color: #ffffff;
}
.to-carts-icon{
    position: absolute;
    right: 70rpx;
    top: 70rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    opacity: .6;
    -webkit-animation: to_cart .3s ease-out;
    animation: to_cart .3s ease-out;
}
@-webkit-keyframes to_cart {
    0%{
        right:100rpx;
        top:530rpx;
        -webkit-transform: scale(4);
    }
    /*60%{
        top: 20rpx;
    }*/
}
@keyframes to_cart {
    0%{
        right:100rpx;
        top:530rpx;
        transform: scale(4);
    }
    /*60%{
        top: 20rpx;
    }*/
}
.shopcar-con {
  width: 220rpx;
  height: 100rpx;
}
.shopcar-con navigator {
  justify-content: center;
  align-items: center;
  display: flex;
  height: 100rpx;
}
.carts-icon{
    position: relative;
    text-align: center;
    width: 75rpx;
    height: 75rpx;
}
.carts-icon image{
    width: 100%;
    height: 100%;
}
.carts-icon.on{
    -webkit-animation: to_cart_scale .3s ease;
    animation: to_cart_scale .3s ease;
}
@-webkit-keyframes to_cart_scale {
    50%{
        -webkit-transform: scale(1.2);
    }
}
@keyframes to_cart_scale {
    50%{
        transform: scale(1.2);
    }
}
.carts-icon-num{
    position: absolute;
    left: -22rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50%;
    background: #ed7b35;
    color: #fff;
    font-size: 24rpx;
}
 .goods-operation{
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    /* margin-bottom: 60rpx; */
    box-sizing: border-box;
    /* border-radius: 50rpx; */
    background: #ed7b35;
    color: #fff;
    font-size: 28rpx;
}
.goods-operation text{
    display: inline-block;
    height: 100rpx;
    text-align: center;
}
.goods-operation-num{
    width: 160rpx;
}
.goods-operation-add{
    width: 80rpx;
    margin-right: 30rpx;
}
.goods-to-cart{
    width: 210rpx;
    /* padding-right: 75rpx; */
}
.goods-cart-img{
    position: absolute;
    right: 50rpx;
    top: 28rpx;
    width: 45rpx;
    height: 45rpx;
}

.goods-stock{
    font-size: 28rpx;
    margin-bottom: 20rpx;
}
.goods-title{
    font-size: 40rpx;
    margin-bottom: 30rpx;
}
.goods-price{
    color:#ed7b35;
    font-size: 40rpx;
}
.goods-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #666;
}
.goods-tab-nav.on{
    color: #ed7b35;
    border-bottom: 5rpx solid #ed7b35;
}
.goods-content{
    padding: 40rpx 20rpx 20rpx;
    margin-bottom: 100rpx;
}
.footer-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #eeeeee;
}
.goods-product {
  padding-left: 15rpx;
  margin-top: 10rpx;
}
.goods-active {
  margin-bottom: 20rpx;
  padding: 30rpx;
  color: #fff;
  background: rgba(237,123,53, .9);
}
.goods-detail{
  width: 100%;
  overflow: hidden;
}
.goods-text {
  margin-bottom: 25rpx;
  font-size: 36rpx;
  /* color: rgb(237,123,53); */
}
.goods-detail .image-con{
  text-align: center;
}
.goods-detail .image-con> image {
  width: 290px;
}